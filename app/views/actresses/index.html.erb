<p id="notice"><%= notice %></p>

<h1>Actresses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @actresses.each do |actress| %>
      <tr>
        <td><%= actress.name %></td>
        <td><%= image_tag actress.image , style: 'height:100px;width:100px'%></td>
        <td><%= link_to 'Show', actress %></td>
        <td><%= link_to 'Edit', edit_actress_path(actress) %></td>
        <td><%= link_to 'Destroy', actress, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Actress', new_actress_path %>
